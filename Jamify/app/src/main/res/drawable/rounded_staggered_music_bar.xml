<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45"
            android:width="10dp"
            android:height="10dp"
            android:gravity="center">
            <shape android:shape="rectangle">
                <solid android:color="#FF6200EE" />
                <corners android:radius="5dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45"
            android:width="10dp"
            android:height="10dp"
            android:gravity="center"
            android:left="10dp">
            <shape android:shape="rectangle">
                <solid android:color="#FF6200EE" />
                <corners android:radius="5dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45"
            android:width="10dp"
            android:height="10dp"
            android:gravity="center"
            android:left="20dp">
            <shape android:shape="rectangle">
                <solid android:color="#FF6200EE" />
                <corners android:radius="5dp" />
            </shape>
        </rotate>
    </item>
</layer-list>